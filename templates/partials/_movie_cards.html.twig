{% for movie in movies %}
    <div class="col-12 mb-3">
        <div class="d-flex align-items-start p-3" style="background: #f5f5f5;">
            <!-- Image à gauche -->
            <img src="https://image.tmdb.org/t/p/w92{{movie.poster_path}}" class="me-3" alt="{{movie.title}}">
            
            <!-- Informations sur le film -->
            <div>
                <!-- Titre et étoiles sur la même ligne -->
                <h5 class="mb-1 d-flex align-items-center">
                    {{movie.title}}
                    <span class="ms-4 stars-rating" style="color: #15b4f5">
                            {% for i in 1..5 %}
                                <i class="fas fa-star {% if i > movie.vote_average / 2 %}text-muted{% endif %}"></i>
                            {% endfor %}
                    </span>
                    <small><span class="ms-2 text-muted">({{ movie.vote_count }} votes)</span></small> <!-- Affichage du nombre de votes -->
                </h5>
                <!-- Description sous le titre -->
                <p class="mb-1">{{movie.overview}}</p>
                <button class="btn btn-info details-button" data-movie-id="{{ movie.id }}">Détails</button>
            </div>
        </div>
    </div>
{% endfor %}

<!-- Modal -->
<div class="modal fade" id="movieDetailsModal" tabindex="-1" role="dialog" aria-labelledby="movieDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="movieDetailsModalLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="movie-details-content"></div>
                <div class="video-container mt-3">
                    <iframe id="movie-trailer" width="100%" height="315" frameborder="0" src="" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
</div>

